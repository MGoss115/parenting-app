<header class="d-flex justify-content-between align-items-center">
  <h1><span class="badge bg-secondary">Kids</span></h1>
<a href="/task/new" class="btn btn-primary">Add Child</a>  
</header>
 <ul class="list-group">
  {{#each kids}}
  <li class="list-group-item d-flex justify-content-between">
    <div>{{this.name}}</div>
     <img src="{{this.url}}" alt="">
   <div class="links">
      <a href="/task/{{this.id}}" class="btn btn-info">View</a>
      <a href="/task/{{this.id}}/edit" class="btn btn-primary">Edit</a>
  
      
       <form action="/task/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
        <input type="submit" value="Delete" class="btn btn-danger" />
      </form>

   </div>
  
      
  </li>
  {{/each}}
</ul>




