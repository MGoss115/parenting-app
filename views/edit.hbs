<h2>Update Child:</h2>

<form action="/task/{{this.id}}/?_method=put" method="POST">
  <div class="form-group">
    <label for="homework">Homework:</label>
    <input type="text" id="task" name="homework" class="form-control" value="{{this.homework}}">
  </div>


  <input type="submit" value="Update Child" class="btn btn-primary" />
  <a href="/task" class="btn btn-secondary">Cancel</a>
</form>